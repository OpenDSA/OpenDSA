// raise to top button -----------
raise-topbutton-size()
  width: 70px
  height: 70px
  line-height: 70px

#raise-top
  border-radius 60px
  background-color: light-cyan
  position: fixed
  right: 5%
  bottom: -70px
  cursor: pointer
  raise-topbutton-size()

  text-align: center
  color: base-white
  letter-spacing: .05em
  z-index: 900
  &:before
    icon-default-style('Genericons', 4.2)
    content: '\f432'
// ------- raise to top button

a.reference.external:before
  icon-default-style()
  content: '\f107'

tt.file .pre:before
  icon-default-style()
  font-size-em 1.7 !important
  color: #3580B7
  content: '\f443'


quote-indent=20px
blockquote
  overflow: hidden
  padding: 10px 0 10px quote-indent
  margin: 10px 0
  border-radius(3px)
  margin-left: 0
  background-color: light-gray

blockquote:before
  icon-default-style()
  content: '\f106'
  margin-left: 0px - quote-indent
  padding-left: 5px
  color: gray

