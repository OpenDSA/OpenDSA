.section
  margin: 25px auto

.documentwrapper
  background-color: base-white
  min-width: main-min-width
  width: 100%
  height: auto
  min-height: 100%
  margin: 0 auto


.document
  overflow: hidden
  background-color: base-white
  margin: 0 auto
  padding-top: padding-from-header
  padding-bottom: footer-height + 20px
  min-width: main-min-width
  width: 60%


.sidebarwrapper
  float: right
  margin: 0 auto
  width: 20%
  min-width: sidebar-width
  height: 100%


.sidebar
  margin: (padding-from-header * 3) auto 0 auto
  width: 85%
  font-size-em main-font-size-em - 0.3
  .relative
    margin: 60px auto
  .topless
    width: inherit
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

ul, ol
  margin-left: left-indent

nav.localtoc
  ul
    margin-left: 0
  li
    padding-left: 0
    list-style: none
    ul
      margin-left: 15px
      li
        list-style: square

.docutils
  dt
    margin-top: 18px
    font-weight: bold
  dd
    margin-left: 30px
    -webkit-margin-start: 30px
    -moz-margin-start: 30px
    p
      margin: 0.4em auto
      margin: 0.4rem auto

// field list
.field
  th.field-name
    vertical-align: top
    border-style: none
    font-weight: bold
  td.field-body
    vertical-align: top
    border-style: none
    box-shadow: none
    padding-left: 10px
    p
      margin: 0.4em auto
      margin: 0.4rem auto
      &.first
        set_rem(margin-top, 0.2)

#searchbox
  margin: 50px auto


.body
  width: article-width
  margin: auto


.headerlink
  text-decoration: none
  margin-left: 10px
  color: #32A1BD
  font-size-em main-font-size-em - 0.1
  &:visited
    color: #32A1BD


footer
  footer-background()
  footer-position()
  height: footer-height
  .show-copyright, .last-updated, .show-sphinx
    display: inline-block
    margin: auto
    padding-left: 15px
    line-height: footer-height - 36px
  .theme-info
    margin: auto
    padding: 0 30px
    line-height: 27px
    vertical-align: middle
  li
    display: inline-block
    list-style: none


.left
  float: left

.right
  float: right

.clearer
  clear: both


table
  box-sizing: border-box
  border-radius(3px)

  margin: 20px 0
  border: 0px solid rgba(243, 243, 243, 0.15)
  border-right-color: rgba(189, 236, 255, 0.4)
  box-shadow(.1px, 0.1px, 0px, 0px rgba(52, 52, 52, 1))
  caption
    text-align: center
    font-size-em main-font-size-em + 0.1
    line-height: main-font-size-px + 20px
  thead
    color: #FFFFFF
    letter-spacing: 0.25em
    text-shadow: .5px .9px 0px rgba(45, 134, 204, 1)
    th
      border: 2px solid rgba(243, 243, 243, 0.2)
      background-color: #52B5CE
      text-align: center
      font-weight: normal
      font-size-em: main-font-size-em + 0.1
      &:first-child
        border-left: 1px solid #52B5CE
      &:last-child
        border-right: 1px solid #52B5CE
  //tbody
  tr
    height: main-font-size-px + 25px
  td
    border: 1px solid #DADCE1
    padding: 0 5px
  .row-even
    background-color: light-gray
  .row-odd
    background-color: base-white


// directive of contents tree
.contents
  .topic-title.first
    color: #0B6486
    set_rem(font-size, 2.5)
    set_rem(padding-left, 1.5)
    set_rem(margin-top, 0.1)
    set_rem(-webkit-margin-before, 0.1)
  border-left: ridge 23px #30CDD5
  padding: 10px 0


@import "directives"
@import "roles"


.icon-index:before , .icon-next:before , .icon-previous:before
  font-size-em 3.6 is-important=true
