@charset "utf-8"
@import "nib/vendor"

@import "colors"
@import "widget-decorations"

@import "normalize"
@import "reset"

header-background()
  background-color: #F1F1F1

header-position()
  position: fixed
  z-index: 10
  top: 0%
  margin: auto
  width: 100%
  height: main-font-size-px + 20px

footer-background()
  background-color: rgba(245, 245, 245, 0.7)

footer-position()
  position: absolute
  clear: both
  bottom: 0
  width: 100%
  margin: auto


font-size-em(font_size, is-important=false)
  if is-important
    font-size: unit(font_size, 'px') !important
    font-size: unit(font_size, 'rem') !important
  else
    font-size: unit(font_size, 'px')
    font-size: unit(font_size, 'rem')

set_rem(prop, font_size)
  /*
    px fall back should adjust font-size as follow `html {font-size: 62.5%;}`
  */
  {prop}: unit(font_size, 'px')
  {prop}: unit(font_size, 'rem')


main-min-width = 320px  // width of iphone(in portrait mode)
main-max-width = 1024px
sidebar-width = 270px
article-width = 90%
footer-height = 80px
// TODO: fix
main-font-size-px = 16px
main-font-size-em = 1.6
//
padding-from-header = 60px

left-indent = 30px


html, body
  font-family: "Avenir Next","Hiragino Kaku Gothic ProN","Hiragino Kaku Gothic Pro","Meiryo","メイリオ","ＭＳ ゴシック",sans-serif
  color: black
  background-color: base-white
  //font-weight: lighter
  height: 100%

html
  font-size: 62.5%

body
  font-size-em main-font-size-em
  // enable font carning and some functions.
  text-rendering: optimizeLegibility
  text-align: justify
  text-justify: distribute
  -ms-text-justify: distribute

div
  font-size-em main-font-size-em

div.content
  width: 100%
  height: auto
  min-height: 100%
  position: relative
  margin: 0 auto


h1, h2, h3, h4, h5
  font-family: "Hiragino Kaku Gothic ProN","Hiragino Kaku Gothic Pro","Meiryo","メイリオ","ＭＳ ゴシック",sans-serif
  font-weight: lighter
  text-align: left
  & a
    color: inherit
    &:visited
      color: inherit

h3, h4, h5
  margin: 15px auto 8px auto
  color: green
  line-bottom(.1, .2)

h1
  margin: 25px auto 25px auto
  font-size-em 4.1
  color: #576970
  set_rem(letter-spacing, (-0.1))
  font-weight: normal
  text-align: left
h2
  margin: 25px auto 17px auto
  font-size-em 3.2
  color: #0B6486
  set_rem(letter-spacing, (-0.08))
  line-bottom()
  set_rem(line-height, 3.9)
h3
  margin: 15px auto 10px auto
  font-size-em: 2.8
  set_rem(letter-spacing, (-0.01))
  set_rem(line-height, 3.5)
h4
  font-size-em: 2.5
h5
  font-size-em: 2.0
  color: #0B6486

.toc-backref
  color: inherit  // disable anchors color used on content backref

ul
  padding: 0
  margin: 20px auto 0 15px

ol
  padding: 0
  margin: 20px auto 0 15px
  &.upperalpha
    list-style-type: upper-alpha
  &.upperroman
    list-style-type: upper-roman
  &.loweralpha
    list-style-type: lower-alpha
  &.lowerroman
    list-style-type: lower-roman

li ul
  margin: 5px auto 0 15px

li
  // list内のparagraphのコンテンツがはみ出るのに対応
  word-wrap: break-word
  margin: 5px auto
  p
    margin-top: 0
    &.first
      margin-top: 0.8em
      margin-bottom: 0.2em
  dl
    dt
      // リストのタイトル部分
    dd  // リストのぶら下がり部分
      margin: 0

a
  color: #009FC7
  text-decoration: none
  &:hover
    color: #427daf
    text-decoration: underline
  &:visited
    color: #BE4A94

em
  font-weight: bold

cite
  set_rem(margin-left, 0.2)
  set_rem(margin-right, 0.2)
  font-weight: normal
  background-color: light-gray

// for sourc code highlight
pre
  font-family: "Ricty-Discord","Ricty-Discord","Osaka－等幅","Osaka-Mono",monospace,serif
  padding: 10px 10px 13px 10px
  margin: 10px 0
  border-radius(3px)

input[type="text"]
  border: 1px solid rgba(213, 209, 228, 1)
  font-weight: lighter;
  max-width: 90%
  margin: 5px auto

input[type="submit"]
  border-radius(3px)
  box-shadow(.1px, .1px, 2px, .1px)

  display: inline-block
  color: base-white
  padding: 6px 10px 2px 10px
  background-color: #27B9D4
  font-weight: normal
  letter-spacing: 0.09em
  border-style: none
  text-shadow: 1px 1px 0px #6682CA

// set webfont on :before in ./genericons.style
// blockquote

/*for Webkit*/
input::-webkit-input-placeholder
    color: #C4D7DA
/*for Firefox*/
input:-moz-placeholder
    color: #C4D7DA
input:placeholder
    color: #C4D7DA

p.topless
  padding: 0 auto
  margin: 0 auto

header
  header-background()
  header-position()
  .right
    margin-right: 20px
  .left
    margin-left: 20px
  ul
    padding: 0
    margin: auto
  li
    display: inline-block
    vertical-align: middle

header.modest
  transition(opacity, 0.5s, linear, 0)
  opacity: 0.5
  &:hover
    opacity: 1

.breadcrumb
  li
    display: inline-block
    list-style: none

// ---- pre like section -> in rst '`'
common-property-of-pre()
  set_rem(padding-left, 0.4)
  set_rem(padding-right, 0.4)
  font-weight: normal
  background-color: light-gray
  box-shadow(.1px, 0.1px, 0px, .1px darken(@background-color, 40%))

// ``
cite
  common-property-of-pre()

// :command:``
strong.command
  common-property-of-pre()
  font-family: "Ricty-Discord","Ricty-Discord","Osaka－等幅","Osaka-Mono",monospace,serif

// ````
.pre
  common-property-of-pre()
  background-color: light-yellow

// :file:``
tt.file .pre
  background-color: light-gray
